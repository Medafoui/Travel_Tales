<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".StatsActivity">

        <TextView
            android:id="@+id/tvStatsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_travel_statistics"
            android:textSize="24sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_countries_visited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stat_container_background"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvStatsTitle"
            tools:text="Countries Visited: 24" />

        <TextView
            android:id="@+id/tv_average_trip_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/stat_container_background"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_countries_visited"
            tools:text="Average Trip Duration: 7 days" />

        <TextView
            android:id="@+id/tv_longest_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/stat_container_background"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_average_trip_duration"
            tools:text="Longest Trip: 14 days" />

        <TextView
            android:id="@+id/tv_trips_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/stat_container_background"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tv_longest_trip"
            tools:text="Trips Completed: 40" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>